{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./target",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  // Allow importing JSON files as modules.
  "resolveJsonModule": true,
  "include": [
    "index.ts",
    "common/**/*.ts",
    "public/**/*.ts",
    "public/**/*.tsx",
    "server/**/*.ts",
    "../../typings/**/*"
  ],
  "exclude": ["node_modules", "*/node_modules/"]
}
